{
  "cron": [
    {
      "command": "python task.py",
      "schedule": "0 5 * * *"
    }
  ],
  "formation": {
    "web": {
      "autoscaling": {
        "min_quantity": 1,
        "max_quantity": 10,
        "triggers": [
          {
            "type": "memory",
            "metadata": {
              "type": "Utilization",
              "value": "60"
            }
          },
          {
            "type": "http",
            "metadata": {
              "scaledown_period_seconds": "150",
              "request_rate_target_value": "50"
            }
          }
        ]
      }
    }
  },
  "healthchecks": {
    "web": [
      {
        "attempts": 2,
        "content": "python/http.server",
        "name": "check-1",
        "path": "/",
        "timeout": 5,
        "type": "startup",
        "wait": 2
      }
    ]
  }
}
